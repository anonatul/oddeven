#include <iostream>
#include <conio.h>
using namespace std;
int main()
{
    int num;
    cout<<"Enter the number\n";
    cin>>num;
    switch(num%2){//this will return either 0 or 1
case 0:
   cout<<num<<" is a even number";
    break;
case 1:
    cout<<num<<" is a odd number";
}
getch();
    return 0;
}
